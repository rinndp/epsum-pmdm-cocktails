<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageDetailCocktail"
        android:layout_width="match_parent"
        android:layout_height="340sp"
        android:cropToPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageDetailCocktail"
        android:padding="20sp"
        >

        <TextView
            android:id="@+id/idDetailCocktail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/nameDetailCocktail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="30sp"
            android:fontFamily="sans-serif-light"
            />


        <TextView
            android:id="@+id/instructionsDetailCocktail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:scrollbars="vertical"
            android:layout_marginTop="15sp"
            android:fontFamily="sans-serif"
            />

        <ProgressBar
            android:id="@+id/progressBarDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>